/*
    A child is running up a staircase with n steps, and can hope either 1 or 2 or 3 steps at a time. Implement a method to count how many possible ways the child can run up the stairs.
*/


public int climbstair(int n)
	{
		int[] ways=new int[n];
		ways[0]=1;
		
		if(n>=4)
		{
			ways[1]=1;
			ways[2]=2;
			ways[3]=3;
			for(int i=4;i<n;i++)
			{
				ways[i]=ways[i-1]+ways[i-2]+ways[i-3];
			}
		}
		return ways[n-1];
	}
